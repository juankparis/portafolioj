/*animacion para los botones de siguiente y atras*/	
@keyframes sombras {
	0%{
		box-shadow 0 0 10px azul_baseClaro inset, 0px 0px 3px gris_obscuro_d
	}50%{
		box-shadow 0 0 40px 40px azul_baseClaro inset, 0px 0px 30px gris_obscuro_d
		color white
		transform scale(1.3)
	}
}

