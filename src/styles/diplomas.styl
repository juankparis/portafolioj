/*variables de colores*/

gris_obscuro_a = hsl(240, 5%, 16%)
gris_obscuro_b = hsl(240, 7%, 11%)
gris_obscuro_c = hsl(0, 0%, 26%)	//hsl(199, 10%, 47%)
gris_obscuro_d = hsl(0, 0%, 20%)    //hsl(199, 12%, 42%)
gris_obscuro_trasp = rgba(18, 18, 18, .7)
gris_claro_a = hsl(0, 0%, 44%)
gris_claro_b = hsl(0, 0%, 38%)   

/*triada de colores*/
azul_baseClaro =#246ECC
azul_baseObscuro =#175BB2
rojo_ladrillo = #FF2B14
amarillo_claro =#D8FF2E
rojo_abscuro =#B22E20
/*fin variables de colores */

.Diplomas
	background #FFFFFF
	box-shadow 0px 2px 40px gris_obscuro_a inset

.Slider-cont
	box-sizing border-box
	overflow hidden
	position relative
	width 100%
	&Img
		font-size 0
		margin 1rem 0 
		transition all 600ms cubic-bezier(0.68, -0.55, 0.265, 1.55)
		width 1200vw
		&-Unit
			box-shadow 0px 0px 9px gris_obscuro_a
			display inline-block
			font-size 16em
			margin-right 10vw
			overflow hidden
			width 70vw
			& Img
				width 100%
	&Select 
		margin 1rem 0
		text-align center
		& label 
			background gris_obscuro_a
			border-radius 50%
			box-shadow 0 0 0 0rem azul_baseObscuro inset, 2px 2px 5px gris_obscuro_b
			cursor pointer
			display inline-block
			height 1.4rem
			margin-right 0.2rem
			transition all .9s ease
			width 1.4rem
	&Left,
	&Right
		border-radius 50%
		color gris_claro_a
		height 50px
		position absolute
		top 34%
		width 50px
		z-index 6
		& label
			cursor pointer
			height 100%
			opacity 0
			position absolute
			text-decoration none
			width 100%
			z-index -1
			&:hover
				animation 1.5s sombras infinite
	&Left
		left 5%
		& label:nth-of-type(12)
			opacity 1
			z-index 2
	&Right
		Right 5%
		& label:nth-of-type(2)
			opacity 1
			z-index 2
			
